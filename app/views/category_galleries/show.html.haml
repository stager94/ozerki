:javascript
	$(document).ready(function(){
		$("a.original-image-link").fancybox({
			openEffect	: 'elastic',
			closeEffect	: 'elastic',
		 	helpers : {
				title : {
					type : 'over'
				},
				thumbs	: {
					width	: 50,
					height	: 50
				}
			}
		});
	});

= title @category.title

.gallery-wrapper
	- @categories.each do |category|
		- info = get_params_to_cat_page category, @all_categories

		= link_to category do
			.gallery-category
				.gallery-category-title
					= raw "#{category.title} (#{info['count']})"
				- info['images'].each do |image|
					= image_tag image.photo(:small)

- @photos.each do |photo|
	= link_to(photo.photo.url(:original), class: "original-image-link", rel: :image, title: photo.description) do
		= image_tag photo.photo.url(:medium)