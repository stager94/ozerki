= title @new.title
/ %h2= @new.title
%p= raw @new.content
%p 
	%b= Russian::strftime(@new.created_at, :long)

.news-navigation
	.left
		- unless @new.prev.nil?
			= link_to category_news_news_path(@new.prev.category, @new.prev) do
				= @new.prev.title
	.right
		- unless @new.next.nil?
			= link_to category_news_news_path(@new.next.category, @new.next) do
				= @new.next.title
.clr-fx