- uslugi    = Page.find(1)
- news      = CategoryNew.find(1)
- akcii     = CategoryNew.find(4)
- kontacts  = Page.find(2)
.navbar.navbar-inverse
  .navbar-inner
    .container
      %a.btn.btn-navbar{"data-target" => ".navbar-responsive-collapse", "data-toggle" => "collapse"}
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      .brand Главное меню
      .nav-collapse.navbar-responsive-collapse.in.collapse{:style => "height: auto;"}
        %ul.nav
          %li{class: params[:controller] == 'application' && params[:action] == 'index' ? "active" : ""}
            = link_to "Главная", root_path
          %li{class: params[:controller] == 'pages' && params[:id] == uslugi.to_param  ? "active" : ""}
            = link_to "Услуги", page_path(uslugi)
          %li{class: @active_menu == 'home' ? "" : ""}
            = link_to "Досуг", root_path
          %li{class: @active_menu == 'home' ? "" : ""}
            = link_to "Цены", root_path
          %li{class: params[:controller] == 'news' && params[:category_news_id] == akcii.to_param ? "active" : ""}
            = link_to "Акции", category_news_news_index_path(akcii)
          %li{class: params[:controller] == 'news' && params[:category_news_id] == news.to_param ? "active" : ""}
            = link_to "Новости", category_news_news_index_path(news)
          %li{class: params[:controller] == 'pages' && params[:id] == uslugi.to_param  ? "" : ""}
            = link_to "История", root_path
          %li{class: params[:controller] == 'category_galleries' ? "active" : ""}
            = link_to "Фото", category_galleries_path
          %li{class: params[:controller] == 'videos' ? "active" : ""}
            = link_to "Видео", video_index_path
          %li{class: params[:controller] == 'testimonals' ? "active" : ""}
            = link_to "Отзывы", testimonals_path
          %li{class: params[:controller] == 'pages' && params[:id] == kontacts.to_param  ? "active" : ""}
            = link_to "Контакты", page_path(kontacts)
      /.nav-collapse
  /navbar-inner

