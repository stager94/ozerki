#ozerki-map
	.static-map
	.dynamic-map
		- houses.each do |house|
			%div{class: "#{house.apartment_class} house-item"}
				.item-title= house.title
				= image_tag house.image
				.item-badge{class: house.badge, data: {toggle: :tooltip, placement: :bottom, original: {title: "Здание #{house.title} \n #{house.free_room_text} \n #{house.free_place_text}"} }}
					= house.free_room

	= link_to "Скачать подробнее в формате Excel", "#{@config.book_excel}", class: "display-block"

	%i
		%b Примечание:
		чтобы узнать более подробно информацию о наличии мест, наведите на бейдж соответствующего домика
	.red-badge - занято
	.yellow-badge - частично занято
	.green-badge - свободно