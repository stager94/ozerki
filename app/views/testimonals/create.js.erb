<% if @testimonal.valid? %>
	// window.location.href = "<%= testimonals_path %>";
	$('#form-errors').html('');
	alertify.success("Ув. <%= @testimonal[:author]%>! Ваш отзыв был поставлен в очередь на модерацию. Благодарим за терпение :)");
	$('#form-notices').html('Спасибо за отзыв. После модерации он обязательно появится в списке на сайте!');
